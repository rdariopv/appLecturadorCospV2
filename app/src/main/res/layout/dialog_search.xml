<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textStyle="bold" android:id="@+id/tvNcnt" android:paddingLeft="5dp" android:paddingTop="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Codigo Fijo:"/>

    <EditText
        android:id="@+id/etCodf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView android:textStyle="bold" android:id="@+id/tvCdof" android:paddingLeft="5dp" android:paddingTop="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cod. Ubicacion:"/>
    <EditText android:textSize="30sp"
        android:id="@+id/etNcnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

</LinearLayout>